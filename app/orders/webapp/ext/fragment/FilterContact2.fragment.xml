<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
        <MultiComboBox
            id="contact2"
            core:require="{handler: 'ns/orders/ext/fragment/FilterContact2'}"
            selectedKeys="{path: 'filterValues>', type: 'sap.fe.macros.filter.type.MultiValue'}"
            items="{path: '/Contacts'}"
            selectionFinish="handler.onSelectionFinish"
            >
            <items>
                <core:Item key="{firstName}" text="{firstName} {lastName}"/>
            </items>
        </MultiComboBox>
</core:FragmentDefinition>

